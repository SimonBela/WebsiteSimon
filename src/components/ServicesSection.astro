---
import { translations } from '../i18n/translations';

const currentLang = Astro.url.searchParams.get('lang') || 'fr';
const t = translations[currentLang];
---
<section id="services" class="py-12 bg-gradient-to-b from-dark via-purple-900/20 to-dark">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-gradient text-center mb-12">{t.services.title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {t.services.items.map(service => (
        <div class="bg-black/30 backdrop-blur-sm p-6 rounded-2xl border border-purple-500/20 hover:border-purple-500/40 transition-colors">
          <h3 class="text-2xl font-bold text-purple-200 mb-3">{service.title}</h3>
          <p class="text-purple-100/80">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>