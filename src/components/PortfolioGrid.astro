---
import { getPortfolioItems } from '../data/portfolio';
import VideoCard from './VideoCard.astro';

interface Props {
  category?: string;
}

const { category } = Astro.props;
const items = getPortfolioItems(category);
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  {items.map(video => (
    <VideoCard {...video} />
  ))}
</div>