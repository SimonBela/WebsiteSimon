---
interface Props {
  title: string;
  description: string;
  thumbnailUrl: string;
  videoUrl: string;
}

const { title, description, thumbnailUrl, videoUrl } = Astro.props;
---
<div class="group relative overflow-hidden rounded-2xl">
  <img 
    src={thumbnailUrl} 
    alt={title} 
    class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 to-blue-900/80 opacity-0 group-hover:opacity-100 transition-all duration-500 flex items-center justify-center backdrop-blur-sm">
    <div class="text-center p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
      <h3 class="text-2xl font-bold text-white mb-3">{title}</h3>
      <p class="text-purple-200 mb-6">{description}</p>
      <a 
        href={videoUrl} 
        class="inline-block bg-white/10 backdrop-blur-md text-white px-6 py-2 rounded-full font-semibold hover:bg-white/20 transition-colors border border-white/30"
        target="_blank"
      >
        Watch Video
      </a>
    </div>
  </div>
</div>